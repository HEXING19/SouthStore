# Connect to Supabase via connection pooling with Supavisor.
DATABASE_URL="postgres://postgres.[YOUR_DATABASE]:[YOUR_PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations.
DIRECT_URL="postgres://postgres.[YOUR_DATABASE]:[YOUR_PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:5432/postgres"

# Better Auth
BETTER_AUTH_SECRET="secret_key"
BETTER_AUTH_BASE_URL="http://localhost:3000"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# PayFast Configuration
# Get your credentials from https://www.payfast.co.za or https://sandbox.payfast.co.za
PAYFAST_MERCHANT_ID="your_merchant_id"
PAYFAST_MERCHANT_KEY="your_merchant_key"
PAYFAST_PASSPHRASE="your_passphrase"

# PayFast URLs
PAYFAST_SANDBOX_URL="https://sandbox.payfast.co.za/eng/process"
PAYFAST_LIVE_URL="https://www.payfast.co.za/eng/process"

# ITN (Instant Transaction Notification) URL
# This is where PayFast sends payment notifications
PAYFAST_ITN_URL="http://localhost:3000/api/checkout/itn"

# Set to 'true' for sandbox/testing mode
PAYFAST_TEST_MODE="true"